<h1 class='page-header'>History</h1>

<!-- <div class="alert alert-warning" role="alert">This is a sample page. Replace link in the header with your own.</div> -->


<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% current_user.all_my_matches.sort_by{|m| m.played_date}.each do |match| %>
      <tr>
        <td><%= match.played_date %></td>
        <td><%= match.opponent ? match.opponent.email : "---"  %><small> <%= match.opponent == current_user ? "( *registered by other )" : "" %></small>  </td>
        <td><%= match.your_score.to_s  + "-" +  match.their_score.to_s %></td>
        <td><%= (match.your_score > match.their_score) ? "W" : ( match.your_score < match.their_score ?  "L": "Tie")  %></td>

      </tr>
    <% end %>
  </tbody>
</table>


