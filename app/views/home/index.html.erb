<h1 class='page-header'>Leaderboard</h1>

<!-- <div class="alert alert-warning" role="alert">This is a sample page.</div> -->


<table class="table table-striped" >
  <thead>
    <tr>
      <th>Rank</th>
      <th>Email</th>
      <th>Score</th>
      <th>Games Played</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% User.all.each_with_index do |user,index| %>
      <tr>

        <td><%= index+1 %></td>
        <td><%= user.email %></td>
        <td><%= user.score %></td>
        <td><%= user.total_played_matches %></td>

      </tr>
    <% end %>
  </tbody>
</table>



